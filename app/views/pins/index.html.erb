<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
      <%= image_tag pin.image.url( :medium) %>
      <div class="panel-body">
        <%= pin.description %>
        <%= pin.user.email if pin.user %>
        </br>
        <%= link_to 'Show', pin, class:"btn btn-success btn-xs" %>
        <% if pin.user == current_user %>
        <%= link_to 'Edit', edit_pin_path(pin),  class:"btn btn-info btn-xs" %>
        <%= link_to 'Destroy', pin,  class:"btn btn-danger btn-xs", method: :delete, data: { confirm: 'Are you sure Bro?' } %>
      </div>
      <% end %>
    </div>
  <% end %>
</div>
